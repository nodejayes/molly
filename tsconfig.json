{
    "compileOnSave": true,
    "compilerOptions": {
        "charset": "utf8",
        "module": "commonjs",
        "target": "es5",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015"],
        "typeRoots": [
            "node_modules/@types/**"
        ],
        "moduleResolution": "node",
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
