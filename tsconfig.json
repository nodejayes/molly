{
    "compileOnSave": true,
    "compilerOptions": {
        "charset": "utf8",
        "module": "commonjs",
        "target": "es5",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types/**"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
