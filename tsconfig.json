{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "src",
        "charset": "utf8",
        "module": "commonjs",
        "target": "es5",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015"],
        "typeRoots": [
            "node_modules/@types/**"
        ],
        "paths": {
            "basic/*": ["basic/*"],
            "decorators/*": ["decorators/*"],
            "interfaces/*": ["interfaces/*"],
            "models/*": ["models/*"],
            "modules/*": ["modules/*"]
        }
    },
    "include": [
        "src/**/*",
        "spec/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
